<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="{Binding Title}"
             x:DataType="viewModels:SettingsViewModel"
             xmlns:viewModels="clr-namespace:Eumel.Dj.Mobile.ViewModels;assembly=Eumel.Dj.Mobile"
             x:Class="Eumel.Dj.Mobile.Views.SettingsPage">
    <ContentPage.Content>
        <StackLayout x:DataType="viewModels:SettingsViewModel">
            <Label Text="Username" />
            <Label Text="{Binding Username}" />
            <Label Text="Token" />
            <Label Text="{Binding Token}" />
            <Label Text="Player Endpoint" />
            <Label Text="{Binding EumelServer}" />
            <Label Text="Syslog Endpoint" />
            <Label Text="{Binding SyslogServer}" />

            <Button Command="{Binding ClearSettingsCommand}" Text="Logout" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>